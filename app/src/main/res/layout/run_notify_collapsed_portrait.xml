<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/gradient_notification"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_notify_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1:54"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_notify_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="54km"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/btn_run_notify_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_baseline_home_24"
            android:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_run_notify_stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_baseline_stop_24"
            android:tint="@color/white" />


        <ImageButton
            android:id="@+id/btn_run_notify_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_baseline_close_24"
            android:tint="@color/white" />

    </LinearLayout>




</LinearLayout>



















