<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>
    <style name="SleepButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorControlHighlight">@color/purple_200</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="timePickerStyle"   parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="title">false</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#bb88bb</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>